node('nodejs') {
    properties([
        disableConcurrentBuilds()
    ])


    stage('checkout') {
        checkout scm
    }

    stage('install modules') {
        sh 'rm -rf node_modules'
        sh 'yarn install --no-progress'
    }

    stage('build') {
        sh "gulp build"
    }

    stage('test') {
        sh "yarn test"
    }

    stage('release') {
        sh "gulp release"
    }
}